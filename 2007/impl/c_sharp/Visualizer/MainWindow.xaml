<Window x:Class="Visualizer.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="MainWindow" Height="647" Width="932"
        Loaded="Window_Loaded">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="2*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="4*" />
		</Grid.RowDefinitions>

		<Grid Grid.Row="0" Grid.Column="0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="*" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>

			<Button Grid.Row="0" Grid.Column="0" x:Name="_runDnaButton" Click="RunDnaButtonClick">Run DNA</Button>
			<Button Grid.Row="0" Grid.Column="1" x:Name="_runRnaButton" Click="RunRnaButtonClick">Run RNA</Button>
            <TextBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" x:Name="_prefixTextBox">IIPIFFCPICICIICPIICIPPPICIIC</TextBox>
		</Grid>
		<ListBox Grid.Row="1" Grid.Column="0" x:Name="_logListBox"/>
        <Image Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" x:Name="_image" Width="600" Height="600"/>
	</Grid>
</Window>